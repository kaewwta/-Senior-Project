<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomePage">


    <View
        android:id="@+id/recompage"
        android:layout_width="0dp"
        android:layout_height="216dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        android:background="#FFD230"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintWidth_percent="0.95" />

    <View

        android:id="@+id/tablepage"
        android:layout_width="410dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="11dp"
        android:background="#00FFEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recompage"
        app:layout_constraintWidth_percent="0.95" />

    <View
        android:id="@+id/weatherpage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="6dp"
        android:background="#96FF03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablepage"
        app:layout_constraintWidth_percent="0.95" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/tkodb"
        android:text="@string/redd"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="@+id/recompage"
        app:layout_constraintTop_toTopOf="@+id/recompage" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/tabb"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/tkodb"
        android:text="@string/tab"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/tablepage"
        app:layout_constraintStart_toStartOf="@+id/tablepage"
        app:layout_constraintTop_toTopOf="@+id/tablepage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginStart="112dp"
        android:fontFamily="@font/tkodb"
        android:text="@string/weath"
        android:textColor="#000000"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/weatherpage"
        app:layout_constraintStart_toStartOf="@+id/weatherpage"
        app:layout_constraintTop_toTopOf="@+id/weatherpage"
        app:layout_constraintVertical_bias="0.929" />


</androidx.constraintlayout.widget.ConstraintLayout>